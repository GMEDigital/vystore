// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  // For Vercel Postgres - url uses connection pooling, directUrl is for migrations
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ==================== MODELS ====================

model Category {
  id          String    @id @default(cuid())
  name        String    @unique
  icon        String    @default("ðŸ“¦")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  products    Product[]
}

model Product {
  id            String      @id @default(cuid())
  name          String
  description   String
  price         Int
  originalPrice Int?
  image         String?
  duration      String?
  stock         Int         @default(10)
  badge         String?     // 'bestseller' | 'promo' | 'outofstock'
  features      String[]    // Array of feature strings
  isActive      Boolean     @default(true)
  
  categoryId    String
  category      Category    @relation(fields: [categoryId], references: [id])
  
  orderItems    OrderItem[]
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([categoryId])
  @@index([isActive])
}

model Order {
  id              String      @id @default(cuid())
  orderNumber     String      @unique @default(cuid())
  
  // Customer info
  customerName    String
  customerEmail   String?
  customerPhone   String
  
  // Order details
  status          OrderStatus @default(PENDING)
  paymentMethod   String
  subtotal        Int
  total           Int
  
  // Account details (for sending to customer)
  accountDetails  String?
  
  // Timestamps
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  paidAt          DateTime?
  sentAt          DateTime?
  
  items           OrderItem[]

  @@index([status])
  @@index([createdAt])
}

model OrderItem {
  id          String   @id @default(cuid())
  quantity    Int
  price       Int      // Price at time of order
  
  orderId     String
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  productId   String
  product     Product  @relation(fields: [productId], references: [id])

  @@index([orderId])
}

model Setting {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Admin {
  id          String   @id @default(cuid())
  email       String   @unique
  password    String   // Hashed password
  name        String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ==================== ENUMS ====================

enum OrderStatus {
  PENDING   // Waiting for payment
  PAID      // Payment confirmed (Lunas)
  SENT      // Account details sent (Dikirim)
  COMPLETED // Order completed
  CANCELLED // Order cancelled
}
